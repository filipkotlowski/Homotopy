{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc --noEmit && vite build --emptyOutDir",
        "preview": "vite preview",
        "front:serve": "cd frontend && npm run dev",
        "front:build": "cd frontend && npm run build",
        "serve": "concurrently \"php artisan serve --port=8080\" \"npm run front:serve\"",
        "deploy": "npm run setup && npm run front:build && php artisan migrate"
    },
    "devDependencies": {
        "axios": "^1.6.1",
        "laravel-vite-plugin": "^1.0.0",
        "vite": "^5.0.0"
    },
    "dependencies": {
        "concurrently": "^8.2.2",
        "vue-tsc": "^1.8.27",
        "vuetify": "^3.5.6"
    }
}
